@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/UploadDocumentModalStyle.css">
    
</head>
<body>
<!-- Кнопка для открытия модального окна -->
<button id="openModalBtn">Загрузить файл</button>

<!-- Модальное окно -->
<div id="uploadModal" class="modal">
    <div class="modal-content">
        <span class="close-btn" id="closeModalBtn">&times;</span>
        <h2>Загрузите .doc файл</h2>
        <form id="uploadForm">
            <input type="file" id="fileInput" accept=".doc" />
            <button type="submit">Загрузить</button>
        </form>
    </div>
</div>

<script src="js/UploadDocumentOpenModal.js"></script>
</body>
</html>
